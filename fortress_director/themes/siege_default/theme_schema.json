{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Fortress Director Theme Package",
  "description": "Declarative package describing prompts, world-state tweaks, and safe-function policies for a given theme.",
  "type": "object",
  "required": ["id", "label", "version"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9_-]+$",
      "description": "Stable identifier used by CLI/launcher."
    },
    "label": {
      "type": "string",
      "description": "Human-readable theme name."
    },
    "description": {
      "type": "string",
      "description": "Short summary presented in UI selectors."
    },
    "version": {
      "type": "integer",
      "minimum": 1,
      "description": "Increment when the package structure or content changes."
    },
    "inherits": {
      "type": ["string", "null"],
      "description": "Optional parent theme id to inherit prompts/world-state overrides from."
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Free-form keywords (e.g., siege, scifi)."
    },
    "prompt_overrides": {
      "type": "object",
      "description": "Relative file paths that override default prompts per agent.",
      "additionalProperties": {"type": "string"}
    },
    "world_state_overrides": {
      "type": "object",
      "description": "Partial JSON applied on top of DEFAULT_WORLD_STATE before a run."
    },
    "safe_function_overrides": {
      "type": "object",
      "properties": {
        "enable": {
          "type": "array",
          "items": {"type": "string"}
        },
        "disable": {
          "type": "array",
          "items": {"type": "string"}
        },
        "gas_budget_overrides": {
          "type": "object",
          "description": "Per-family/per-function gas limits used by FunctionCallValidator.",
          "additionalProperties": {"type": "integer"}
        }
      }
    },
    "assets": {
      "type": "object",
      "properties": {
        "motifs": {
          "type": "array",
          "items": {"type": "string"}
        },
        "npc_roster": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "name": {"type": "string"},
              "summary": {"type": "string"},
              "role": {"type": "string"}
            },
            "required": ["id", "name"]
          }
        },
        "scene_overlays": {
          "type": "array",
          "description": "Declarative overlay instructions that drive Pixi/mini-map tinting.",
          "items": {
            "type": "object",
            "properties": {
              "id": {"type": "string"},
              "label": {"type": "string"},
              "color": {"type": "string"},
              "alpha": {"type": "number"},
              "pattern": {"type": "string"},
              "bounds": {},
              "area": {},
              "region": {},
              "tile": {},
              "detail": {"type": "string"}
            },
            "additionalProperties": true
          }
        }
      }
    },
    "notes": {
      "type": "object",
      "description": "Theme-specific metadata (e.g., recommended difficulty or UI palette)."
    }
  },
  "additionalProperties": false
}
