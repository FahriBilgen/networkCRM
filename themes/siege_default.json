{
  "$schema": "./theme_schema.json",
  "id": "siege_default",
  "label": "Siege of Lornhaven",
  "description": "Low-fantasy fortress defense with grit, dwindling resources, and glitch anomalies.",
  "version": 1,
  "tags": ["siege", "grimdark", "fortress"],
  "prompt_overrides": {
    "event": "prompts/event_prompt.txt",
    "world": "prompts/world_prompt.txt",
    "character": "prompts/character_prompt.txt",
    "planner": "prompts/planner_prompt.txt",
    "creativity": "prompts/creativity_prompt.txt",
    "judge": "prompts/judge_prompt.txt"
  },
  "world_state_overrides": {
    "campaign_id": "siege_default",
    "player": {
      "name": "The Shieldbearer",
      "inventory": [
        "oil lamp",
        "patched shield",
        "signal horn"
      ],
      "summary": "Veteran watch-captain guarding the western parapets."
    },
    "current_room": "western_wall",
    "recent_motifs": ["iron", "smoke"],
    "structures": {
      "western_wall": {
        "durability": 80,
        "status": "battered"
      },
      "inner_gate": {
        "durability": 65,
        "status": "reinforced"
      }
    }
  },
  "safe_function_overrides": {
    "enable": [
      "reinforce_structure",
      "repair_breach",
      "schedule_npc_activity",
      "adjust_stockpile",
      "queue_major_event"
    ],
    "disable": [
      "spawn_npc"
    ],
    "gas_budget_overrides": {
      "max_total_calls": 20,
      "max_calls_per_function": 5
    }
  },
  "assets": {
    "motifs": ["ashes", "iron", "echoes", "embers"],
    "npc_roster": [
      {
        "id": "rhea",
        "name": "Rhea Emberfall",
        "summary": "Impulsive scout who reads the winds for incoming sieges.",
        "role": "scout"
      },
      {
        "id": "boris",
        "name": "Boris Marrow",
        "summary": "Logistician who barters with caravans for grain and pitch.",
        "role": "quartermaster"
      }
    ]
  },
  "notes": {
    "recommended_objective": "Hold until turn 10 and trigger the crisis finale.",
    "ui_palette": {
      "primary": "#654321",
      "accent": "#AA8844"
    }
  }
}
